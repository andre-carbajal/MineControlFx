<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ProgressBar?>
<ScrollPane hbarPolicy="NEVER" prefHeight="400.0" prefWidth="482.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.andrecarbajal.minecontrolfx.controller.CreateController">
   <content>
      <VBox prefHeight="343.0" prefWidth="485.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="CREATE A NEW SERVER" />
            <Label text="Name:" />
            <TextField fx:id="nameTextField" />
            <Label text="Loader:" />
            <ListView fx:id="loaderListView" prefHeight="200.0" prefWidth="150.0" />
            <Label text="Version:" />
            <ChoiceBox fx:id="versionChoiceBox" prefWidth="150.0" />
            <Button fx:id="createButton" alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#createButtonAction" text="Create" />
            <ProgressBar fx:id="progressBar" visible="false" prefWidth="200.0" />
            <Label fx:id="statusLabel" text="" />
         </children>
      </VBox>
   </content>
</ScrollPane>
